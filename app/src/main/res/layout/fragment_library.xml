<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="kitaplik.mbo.com.sosyal_kitaplik.fragments.LibraryFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center">
<android.support.v7.widget.CardView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="3dp">
    <ImageButton
        android:id="@+id/btnokuduklarim"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="10dp"
        android:src="@drawable/readed"
        android:background="@color/cardview_light_background"
        />
</android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:elevation="3dp">

        <ImageButton
            android:id="@+id/btnokuyacaklarim"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="10dp"
            android:background="@color/cardview_light_background"
            android:src="@drawable/willread" />
    </android.support.v7.widget.CardView>


</LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Åžu An Okunanlar"
        android:textAlignment="center"

        android:textColor="@color/black"
        android:textSize="14dp"
        android:background="@drawable/listlines"/>

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="3dp">
    <Button
        android:id="@+id/btnreadingbook"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:text="kitap Ekle"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>

</android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/readingbooksrv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
